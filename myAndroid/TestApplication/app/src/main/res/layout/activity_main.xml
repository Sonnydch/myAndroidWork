<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.MainActivity">

    <TextView
        android:id="@+id/myText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_marginBottom="10dp"
        android:textAlignment="center"
        android:layout_alignRight="@+id/btnText"
        android:layout_alignEnd="@+id/btnText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnText"
        app:bootstrapBrand="regular"
        android:layout_below="@+id/myText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        android:text="按钮"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_001"
        app:bootstrapBrand="primary"
        android:layout_below="@+id/btnText"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"
        android:text="按钮" />

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_002"
        app:bootstrapBrand="info"
        android:text="按钮"
        android:layout_below="@+id/btn_001"
        android:layout_alignRight="@+id/btn_001"
        android:layout_alignEnd="@+id/btn_001"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>

    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_003"
        app:bootstrapBrand="warning"
        android:text="按钮"
        android:layout_below="@+id/btn_002"
        android:layout_alignRight="@+id/btn_002"
        android:layout_alignEnd="@+id/btn_002"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_004"
        app:bootstrapBrand="secondary"
        android:text="按钮"
        android:layout_below="@+id/btn_003"
        android:layout_alignRight="@+id/btn_003"
        android:layout_alignEnd="@+id/btn_003"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_005"
        app:bootstrapBrand="success"
        android:text="按钮"
        android:layout_below="@+id/btn_004"
        android:layout_alignRight="@+id/btn_004"
        android:layout_alignEnd="@+id/btn_004"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>
    <com.beardedhen.androidbootstrap.BootstrapButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_006"
        app:bootstrapBrand="danger"
        android:text="按钮"
        android:layout_below="@+id/btn_005"
        android:layout_alignRight="@+id/btn_005"
        android:layout_alignEnd="@+id/btn_005"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        app:showOutline="true"
        app:roundedCorners="true"
        app:bootstrapSize="lg"/>
</RelativeLayout>
